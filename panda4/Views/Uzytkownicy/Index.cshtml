@model IEnumerable<panda4.Models.UzytkownicyModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Uzytkownicy</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzyAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wypozyczone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CzyAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wypozyczone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UzytkownikId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UzytkownikId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UzytkownikId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
